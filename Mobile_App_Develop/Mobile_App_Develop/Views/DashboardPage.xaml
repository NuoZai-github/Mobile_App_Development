<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Mobile_App_Develop.Views.DashboardPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Dashboard"
             BackgroundColor="#1a1a1a">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            
            <!-- æ¬¢è¿Žä¿¡æ¯ -->
            <Frame BackgroundColor="#2d2d2d" 
                   CornerRadius="12" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout>
                    <Label x:Name="WelcomeLabel"
                           Text="Welcome back!"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label x:Name="UserNameLabel"
                           Text="Loading..."
                           FontSize="16"
                           TextColor="#b0b0b0"
                           HorizontalOptions="Center"
                           Margin="0,5,0,0" />
                </StackLayout>
            </Frame>

            <!-- å¿«é€Ÿç»Ÿè®¡ -->
            <Grid ColumnDefinitions="*,*" 
                  RowDefinitions="Auto" 
                  ColumnSpacing="15">
                
                <Frame Grid.Column="0" 
                       BackgroundColor="#2d2d2d" 
                       CornerRadius="12" 
                       Padding="15"
                       HasShadow="True">
                    <StackLayout>
                        <Label Text="Active Buses"
                               FontSize="14"
                               TextColor="#b0b0b0"
                               HorizontalOptions="Center" />
                        <Label x:Name="ActiveBusesLabel"
                               Text="0"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="#4CAF50"
                               HorizontalOptions="Center" />
                    </StackLayout>
                </Frame>

                <Frame Grid.Column="1" 
                       BackgroundColor="#2d2d2d" 
                       CornerRadius="12" 
                       Padding="15"
                       HasShadow="True">
                    <StackLayout>
                        <Label Text="Total Routes"
                               FontSize="14"
                               TextColor="#b0b0b0"
                               HorizontalOptions="Center" />
                        <Label x:Name="TotalRoutesLabel"
                               Text="0"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="#2196F3"
                               HorizontalOptions="Center" />
                    </StackLayout>
                </Frame>
            </Grid>

            <!-- å·´å£«åˆ—è¡¨æ ‡é¢˜ -->
            <StackLayout Orientation="Horizontal">
                <Label Text="Active Buses"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center" />
                <Button x:Name="RefreshButton"
                        Text="ðŸ”„"
                        FontSize="16"
                        BackgroundColor="Transparent"
                        TextColor="#2196F3"
                        HorizontalOptions="EndAndExpand"
                        Clicked="OnRefreshClicked" />
            </StackLayout>

            <!-- åŠ è½½æŒ‡ç¤ºå™¨ -->
            <ActivityIndicator x:Name="LoadingIndicator"
                               IsVisible="False"
                               IsRunning="False"
                               Color="#2196F3"
                               HorizontalOptions="Center" />

            <!-- å·´å£«åˆ—è¡¨ -->
            <CollectionView x:Name="BusesCollectionView"
                            ItemsSource="{Binding Buses}"
                            BackgroundColor="Transparent">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="0,5">
                            <Frame BackgroundColor="#2d2d2d" 
                                   CornerRadius="12" 
                                   Padding="15"
                                   HasShadow="True"
                                   Margin="0,5">
                                <Grid ColumnDefinitions="Auto,*,Auto" 
                                      RowDefinitions="Auto,Auto,Auto"
                                      ColumnSpacing="15"
                                      RowSpacing="5">
                                    
                                    <!-- å·´å£«å›¾æ ‡ -->
                                    <Frame Grid.RowSpan="3"
                                           BackgroundColor="#4CAF50"
                                           CornerRadius="25"
                                           WidthRequest="50"
                                           HeightRequest="50"
                                           Padding="0"
                                           HasShadow="False">
                                        <Label Text="ðŸšŒ"
                                               FontSize="24"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center" />
                                    </Frame>

                                    <!-- å·´å£«ä¿¡æ¯ -->
                                    <Label Grid.Column="1" Grid.Row="0"
                                           Text="{Binding BusNumber}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="White" />
                                    
                                    <Label Grid.Column="1" Grid.Row="1"
                                           Text="{Binding RouteName}"
                                           FontSize="14"
                                           TextColor="#b0b0b0" />
                                    
                                    <Label Grid.Column="1" Grid.Row="2"
                                           Text="{Binding NextStop}"
                                           FontSize="12"
                                           TextColor="#FFC107" />

                                    <!-- çŠ¶æ€å’Œæ—¶é—´ -->
                                    <StackLayout Grid.Column="2" Grid.RowSpan="3"
                                                 VerticalOptions="Center">
                                        <Label Text="{Binding Status}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="{Binding StatusColor}"
                                               HorizontalOptions="End" />
                                        <Label Text="{Binding EstimatedArrival, StringFormat='{0:HH:mm}'}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               HorizontalOptions="End" />
                                        <Label Text="{Binding PassengerCount, StringFormat='{0} passengers'}"
                                               FontSize="10"
                                               TextColor="#b0b0b0"
                                               HorizontalOptions="End" />
                                    </StackLayout>
                                </Grid>

                                <!-- ç‚¹å‡»æ‰‹åŠ¿ -->
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnBusItemTapped"
                                                          CommandParameter="{Binding}" />
                                </Frame.GestureRecognizers>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- ç©ºçŠ¶æ€ -->
            <StackLayout x:Name="EmptyStateLayout"
                         IsVisible="False"
                         VerticalOptions="Center"
                         Padding="20">
                <Label Text="ðŸšŒ"
                       FontSize="48"
                       HorizontalOptions="Center"
                       TextColor="#666" />
                <Label Text="No buses available"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#666"
                       HorizontalOptions="Center"
                       Margin="0,10,0,0" />
                <Label Text="Check back later for bus updates"
                       FontSize="14"
                       TextColor="#999"
                       HorizontalOptions="Center"
                       Margin="0,5,0,0" />
            </StackLayout>

        </StackLayout>
    </ScrollView>

</ContentPage>