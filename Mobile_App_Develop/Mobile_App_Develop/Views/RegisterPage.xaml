<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Mobile_App_Develop.Views.RegisterPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Create Account"
             BackgroundColor="#1A1A1A">
    
    <ScrollView>
        <Grid Padding="30,20,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <StackLayout Grid.Row="0" Spacing="15" Margin="0,20,0,30">
                <Label Text="Create Account" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       TextColor="White" 
                       HorizontalOptions="Center" />
                
                <Label Text="Join UTS Bus Tracker community" 
                       FontSize="16" 
                       TextColor="#B0B0B0" 
                       HorizontalOptions="Center" />
            </StackLayout>

            <!-- Registration Form Section -->
            <StackLayout Grid.Row="1" Spacing="20">
                
                <!-- First Name Input -->
                <Frame BackgroundColor="#2A2A2A" 
                       CornerRadius="10" 
                       Padding="0" 
                       HasShadow="False">
                    <Entry x:Name="FirstNameEntry"
                           Placeholder="First Name"
                           PlaceholderColor="#808080"
                           TextColor="White"
                           BackgroundColor="Transparent"
                           Margin="15,10" />
                </Frame>

                <!-- Last Name Input -->
                <Frame BackgroundColor="#2A2A2A" 
                       CornerRadius="10" 
                       Padding="0" 
                       HasShadow="False">
                    <Entry x:Name="LastNameEntry"
                           Placeholder="Last Name"
                           PlaceholderColor="#808080"
                           TextColor="White"
                           BackgroundColor="Transparent"
                           Margin="15,10" />
                </Frame>

                <!-- Student ID Input -->
                <Frame BackgroundColor="#2A2A2A" 
                       CornerRadius="10" 
                       Padding="0" 
                       HasShadow="False">
                    <Entry x:Name="StudentIdEntry"
                           Placeholder="Student ID"
                           PlaceholderColor="#808080"
                           TextColor="White"
                           BackgroundColor="Transparent"
                           Keyboard="Numeric"
                           Margin="15,10" />
                </Frame>

                <!-- Email Input -->
                <Frame BackgroundColor="#2A2A2A" 
                       CornerRadius="10" 
                       Padding="0" 
                       HasShadow="False">
                    <Entry x:Name="EmailEntry"
                           Placeholder="Email Address"
                           PlaceholderColor="#808080"
                           TextColor="White"
                           BackgroundColor="Transparent"
                           Keyboard="Email"
                           Margin="15,10" />
                </Frame>

                <!-- Password Input -->
                <Frame BackgroundColor="#2A2A2A" 
                       CornerRadius="10" 
                       Padding="0" 
                       HasShadow="False">
                    <Entry x:Name="PasswordEntry"
                           Placeholder="Password"
                           PlaceholderColor="#808080"
                           TextColor="White"
                           BackgroundColor="Transparent"
                           IsPassword="True"
                           Margin="15,10" />
                </Frame>

                <!-- Confirm Password Input -->
                <Frame BackgroundColor="#2A2A2A" 
                       CornerRadius="10" 
                       Padding="0" 
                       HasShadow="False">
                    <Entry x:Name="ConfirmPasswordEntry"
                           Placeholder="Confirm Password"
                           PlaceholderColor="#808080"
                           TextColor="White"
                           BackgroundColor="Transparent"
                           IsPassword="True"
                           Margin="15,10" />
                </Frame>

                <!-- Terms and Conditions -->
                <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                    <CheckBox x:Name="TermsCheckBox" 
                              Color="#2196F3" />
                    <Label VerticalOptions="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="I agree to the " TextColor="#B0B0B0" FontSize="14" />
                                <Span Text="Terms of Service" TextColor="#2196F3" FontSize="14" TextDecorations="Underline">
                                    <Span.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnTermsTapped" />
                                    </Span.GestureRecognizers>
                                </Span>
                                <Span Text=" and " TextColor="#B0B0B0" FontSize="14" />
                                <Span Text="Privacy Policy" TextColor="#2196F3" FontSize="14" TextDecorations="Underline">
                                    <Span.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnPrivacyTapped" />
                                    </Span.GestureRecognizers>
                                </Span>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </StackLayout>

                <!-- Register Button -->
                <Button x:Name="RegisterButton"
                        Text="Create Account"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50"
                        Margin="0,20,0,0"
                        Clicked="OnRegisterClicked" />

                <!-- Loading Indicator -->
                <ActivityIndicator x:Name="LoadingIndicator"
                                   IsVisible="False"
                                   IsRunning="False"
                                   Color="#2196F3"
                                   HeightRequest="30" />

                <!-- Error Message -->
                <Label x:Name="ErrorLabel"
                       IsVisible="False"
                       TextColor="#F44336"
                       FontSize="14"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />

            </StackLayout>

            <!-- Login Section -->
            <StackLayout Grid.Row="2" Spacing="10" Margin="0,20,0,0">
                <BoxView BackgroundColor="#404040" HeightRequest="1" Margin="0,0,0,10" />
                
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="5">
                    <Label Text="Already have an account?" 
                           TextColor="#B0B0B0" 
                           FontSize="14" />
                    <Label Text="Sign In"
                           TextColor="#2196F3"
                           FontSize="14"
                           FontAttributes="Bold">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLoginTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
            </StackLayout>

        </Grid>
    </ScrollView>
</ContentPage>