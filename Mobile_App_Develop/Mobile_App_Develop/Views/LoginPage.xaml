<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Mobile_App_Develop.Views.LoginPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="UTS Bus Tracker"
             BackgroundColor="{StaticResource White}">
    
    <ScrollView>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="44" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Padding="20,0" ColumnDefinitions="Auto,*" MinimumWidthRequest="428">
                <Label Text="03:16" Padding="10,0" TextColor="#000000" FontAttributes="Bold" FontSize="15" VerticalTextAlignment="Center" />
                <Grid Grid.Column="1" HorizontalOptions="End" WidthRequest="67" HeightRequest="11">
                    <BoxView Color="#000000" WidthRequest="14" HeightRequest="3" CornerRadius="1.5" HorizontalOptions="Start" VerticalOptions="Center" />
                    <BoxView Color="#000000" WidthRequest="10" HeightRequest="3" CornerRadius="1.5" HorizontalOptions="Center" VerticalOptions="Center" />
                    <BoxView Color="#000000" WidthRequest="18" HeightRequest="8" CornerRadius="1.5" HorizontalOptions="End" VerticalOptions="Center" />
                </Grid>
            </Grid>

            <StackLayout Grid.Row="1" Spacing="5" Margin="0,95,0,0" WidthRequest="378" HorizontalOptions="Center">
                <Label Text="Welcome Back" FontSize="32" FontAttributes="Bold" TextColor="#0095FF" />
                <Label Text="Access your trips and transport info in seconds." FontSize="15" TextColor="#000000" />
            </StackLayout>

            <StackLayout Grid.Row="2" Spacing="30" Margin="0,40,0,0" Padding="25,0" WidthRequest="428" HorizontalOptions="FillAndExpand">
                <Frame BackgroundColor="#EAF6FF" CornerRadius="10" HasShadow="False" Padding="18,25" HeightRequest="66">
                    <Entry x:Name="EmailEntry" Placeholder="Enter Email" PlaceholderColor="#000000" TextColor="#000000" BackgroundColor="Transparent" />
                </Frame>

                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="20">
                    <Frame Grid.Row="0" Grid.ColumnSpan="2" BackgroundColor="#EAF6FF" CornerRadius="10" HasShadow="False" Padding="18,25" HeightRequest="66">
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry x:Name="PasswordEntry" Placeholder="Enter password" IsPassword="True" BackgroundColor="Transparent" TextColor="#000000" PlaceholderColor="#000000" />
                            <ImageButton x:Name="TogglePasswordButton" Grid.Column="1" Source="eye.png" BackgroundColor="Transparent" WidthRequest="20" HeightRequest="20" Clicked="OnTogglePasswordVisibility" />
                        </Grid>
                    </Frame>

                    <Grid Grid.Row="1" Grid.ColumnSpan="2" ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                        <StackLayout Orientation="Horizontal" Spacing="7">
                            <CheckBox x:Name="RememberMeCheckBox" WidthRequest="10" HeightRequest="10" Scale="0.8" />
                            <Label Text="Remember Me" FontSize="12" TextColor="#000000" VerticalTextAlignment="Center" />
                        </StackLayout>
                        <Label Grid.Column="2" Text="Forgot password?" TextColor="#0095FF" FontSize="12">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnForgotPasswordTapped" />
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                </Grid>

                <Button x:Name="LoginButton" Text="Sign In" BackgroundColor="#0095FF" TextColor="#FFFFFF" CornerRadius="10" HeightRequest="60" Padding="20" Clicked="OnLoginClicked" />

                <StackLayout Spacing="15" Margin="0,10,0,0">
                    <Grid ColumnDefinitions="Auto,Auto,Auto" VerticalOptions="Center" ColumnSpacing="16" HorizontalOptions="Center">
                        <BoxView WidthRequest="137" HeightRequest="1" Color="#EBEBEB" />
                        <Label Grid.Column="1" Text="Or" FontSize="13" TextColor="#000000" HorizontalOptions="Center" VerticalTextAlignment="Center" />
                        <BoxView Grid.Column="2" WidthRequest="137" HeightRequest="1" Color="#EBEBEB" />
                    </Grid>
                    <Grid ColumnDefinitions="Auto,Auto,Auto" ColumnSpacing="30" HorizontalOptions="Center">
                        <Frame WidthRequest="60" HeightRequest="60" CornerRadius="30" HasShadow="False">
                            <Image Source="google.png" WidthRequest="60" HeightRequest="60" />
                        </Frame>
                        <Frame Grid.Column="1" WidthRequest="60" HeightRequest="60" CornerRadius="30" HasShadow="False">
                            <Image Source="apple.png" WidthRequest="60" HeightRequest="60" />
                        </Frame>
                        <Frame Grid.Column="2" WidthRequest="60" HeightRequest="60" CornerRadius="30" HasShadow="False">
                            <Image Source="facebook.png" WidthRequest="60" HeightRequest="60" />
                        </Frame>
                    </Grid>
                    <Label FontSize="13">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Don't have an account? " TextColor="#525252" />
                                <Span Text="Create Account" FontAttributes="Bold" TextColor="#000000" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </StackLayout>

                <ActivityIndicator x:Name="LoadingIndicator" IsVisible="False" IsRunning="False" Color="#0095FF" HeightRequest="30" />
                <Label x:Name="ErrorLabel" IsVisible="False" TextColor="#F44336" FontSize="14" HorizontalOptions="Center" HorizontalTextAlignment="Center" />
            </StackLayout>

            <Grid Grid.Row="3" HeightRequest="30" HorizontalOptions="Center" VerticalOptions="End" Margin="0,215,0,0">
                <BoxView Color="#000000" WidthRequest="120" HeightRequest="4" CornerRadius="2" HorizontalOptions="Center" VerticalOptions="Center" />
            </Grid>

        </Grid>
    </ScrollView>
</ContentPage>
