<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Mobile_App_Develop.Views.LoginPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="UTS Bus Tracker"
             BackgroundColor="#1A1A1A">
    
    <ScrollView>
        <Grid Padding="30,50,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Logo and Title Section -->
            <StackLayout Grid.Row="0" VerticalOptions="End" Spacing="20">
                <!-- App Logo -->
                <Frame BackgroundColor="#2196F3" 
                       CornerRadius="50" 
                       WidthRequest="100" 
                       HeightRequest="100" 
                       HorizontalOptions="Center"
                       HasShadow="True">
                    <Label Text="ðŸšŒ" 
                           FontSize="50" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" />
                </Frame>
                
                <!-- App Title -->
                <Label Text="UTS Bus Tracker" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       TextColor="White" 
                       HorizontalOptions="Center" />
                
                <Label Text="Track your campus buses in real-time" 
                       FontSize="16" 
                       TextColor="#B0B0B0" 
                       HorizontalOptions="Center" />
            </StackLayout>

            <!-- Login Form Section -->
            <StackLayout Grid.Row="1" Spacing="20" Margin="0,40,0,0">
                
                <!-- Email Input -->
                <Frame BackgroundColor="#2A2A2A" 
                       CornerRadius="10" 
                       Padding="0" 
                       HasShadow="False">
                    <Entry x:Name="EmailEntry"
                           Placeholder="Email Address"
                           PlaceholderColor="#808080"
                           TextColor="White"
                           BackgroundColor="Transparent"
                           Keyboard="Email"
                           Margin="15,10" />
                </Frame>

                <!-- Password Input -->
                <Frame BackgroundColor="#2A2A2A" 
                       CornerRadius="10" 
                       Padding="0" 
                       HasShadow="False">
                    <Entry x:Name="PasswordEntry"
                           Placeholder="Password"
                           PlaceholderColor="#808080"
                           TextColor="White"
                           BackgroundColor="Transparent"
                           IsPassword="True"
                           Margin="15,10" />
                </Frame>

                <!-- Login Button -->
                <Button x:Name="LoginButton"
                        Text="Sign In"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50"
                        Clicked="OnLoginClicked" />

                <!-- Loading Indicator -->
                <ActivityIndicator x:Name="LoadingIndicator"
                                   IsVisible="False"
                                   IsRunning="False"
                                   Color="#2196F3"
                                   HeightRequest="30" />

                <!-- Error Message -->
                <Label x:Name="ErrorLabel"
                       IsVisible="False"
                       TextColor="#F44336"
                       FontSize="14"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />

                <!-- Forgot Password -->
                <Label Text="Forgot Password?"
                       TextColor="#2196F3"
                       FontSize="14"
                       HorizontalOptions="Center"
                       Margin="0,10,0,0">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnForgotPasswordTapped" />
                    </Label.GestureRecognizers>
                </Label>

            </StackLayout>

            <!-- Register Section -->
            <StackLayout Grid.Row="2" VerticalOptions="End" Spacing="10">
                <BoxView BackgroundColor="#404040" HeightRequest="1" Margin="0,20,0,10" />
                
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="5">
                    <Label Text="Don't have an account?" 
                           TextColor="#B0B0B0" 
                           FontSize="14" />
                    <Label Text="Sign Up"
                           TextColor="#2196F3"
                           FontSize="14"
                           FontAttributes="Bold">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRegisterTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
                
                <!-- Demo Credentials Info -->
                <Frame BackgroundColor="#2A2A2A" 
                       CornerRadius="8" 
                       Padding="15" 
                       Margin="0,20,0,0"
                       HasShadow="False">
                    <StackLayout Spacing="5">
                        <Label Text="Demo Credentials:" 
                               TextColor="#FFC107" 
                               FontSize="12" 
                               FontAttributes="Bold" />
                        <Label Text="Email: student@uts.edu.my" 
                               TextColor="#B0B0B0" 
                               FontSize="11" />
                        <Label Text="Password: password123" 
                               TextColor="#B0B0B0" 
                               FontSize="11" />
                    </StackLayout>
                </Frame>
            </StackLayout>

        </Grid>
    </ScrollView>
</ContentPage>